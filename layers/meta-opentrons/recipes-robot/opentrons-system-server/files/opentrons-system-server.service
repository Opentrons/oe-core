[Unit]
Description=Opentrons System HTTP Server
Requires=nginx.service
After=nginx.service

[Service]
Type=simple
ExecStart=python3 -m system-server
StateDirectory=opentrons-system-server
Environment=OT_API_FF_enableOT3HardwareController=true\
Environment=PYTHONPATH=/opt/opentrons-system-server:/usr/lib/python3.8/site-packages\
Restart=on-failure
TimeoutStartSec=3min
After=nginx.service
Wants=nginx.service

[Install]
WantedBy=multi-user.target
