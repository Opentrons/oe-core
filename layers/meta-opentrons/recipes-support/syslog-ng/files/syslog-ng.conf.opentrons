@version: 3.24
@include "@CONFDIR@/syslog-ng/api_key.conf"
@include "@CONFDIR@/syslog-ng/level-filter/plugin.conf"

source s_journ {
  systemd-journal(prefix(""));
};

source s_int {
  internal();
};

template datadog_format {
  template("`datadog_api_key` <${PRI}>1 ${ISODATE} ${HOST:--} ${PROGRAM:--} ${PID:--} ${MSGID:--} ${SDATA:--} $MSG\n");
};

destination d_datadog {
  network("intake.logs.datadoghq.com" port(10516)
          transport("tls")
          tls(peer-verify(required-untrusted)
              ca-dir("@CONFDIR@/syslog-ng/certs.d"))
          template(datadog_format));
};

filter api_logs {
  in-list("@CONFDIR@/syslog-ng/opentrons-sources", value("PROGRAM"));
};

filter f_minlevel {
  level-filter();
};

rewrite r_nonewlines {
  subst("\n", ";", value("MESSAGE") flags("global"));
};

log {
  source(s_journ);
  source(s_int);
  filter(api_logs);
  filter(f_minlevel);
  rewrite(r_nonewlines);
  flow-control();
  destination(d_datadog);
};
